{
  "extends": "../.eslintrc.json",
  "rules": {
    "no-unused-expressions": 0
  },
  "env": {
    "mocha": true
  },
  "globals": {
    "describe": false,
    "xdescribe": false,
    "it": false,
    "xit": false,
    "before": false,
    "beforeEach": false,
    "after": false,
    "afterEach": false,

    "Feature": false,
    "Scenario": false,
    "Given": false,
    "When": false,
    "Then": false,
    "And": false,
    "But": false
  }
}
